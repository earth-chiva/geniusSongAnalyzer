import lxml
import re
import numpy as np
import pandas as pd
from bs4 import BeautifulSoup
from requests import get

def urlSoupGetter(url):
    page = get(url)
    return BeautifulSoup(page.content, 'lxml')

def lyricExtracter(soup):
    lyricTag = str(soup.find_all("div", class_="Lyrics__Container-sc-1ynbvzw-2 jgQsqn"))[1:-1]
    return BeautifulSoup(lyricTag, 'lxml')

class songInfo(object):
    def __init__(self, urlString):
        self.soup = urlSoupGetter(urlString)
        self.lyric = lyricExtracter(self.soup).get_text(separator='\n')
        self.songName = str(self.soup.find_all("h1", class_="SongHeader__Title-sc-1b7aqpg-7 eJWiuG"))
        self.bandName = str(self.soup.find_all("a", class_="Link-h3isu4-0 dpVWpH SongHeader__Artist-sc-1b7aqpg-8 DYpgM"))

urlString = "https://genius.com/Kodaline-high-hopes-lyrics"
mySong = songInfo(urlString)
print(mySong.songName + " " + mySong.bandName)